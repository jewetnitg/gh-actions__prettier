{
    "name": "@gh-actions/prettier",
    "version": "0.0.0-development",
    "private": true,
    "description": "prettier github action",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write '**/*.ts' '**/*.yml' '**/*.yaml' '**/*.json' '**/*.js' '**/*.md'",
        "format-check": "prettier --check '**/*.ts' '**/*.yml' '**/*.yaml' '**/*.json' '**/*.js' '**/*.md'",
        "lint": "eslint src/**/*.ts",
        "pack": "ncc build",
        "test": "jest",
        "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jewetnitg/gh-actions__prettier.git"
    },
    "keywords": [
        "actions",
        "prettier"
    ],
    "author": "Rik Hoffbauer",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.2.0",
        "@types/fs-extra": "^8.0.1",
        "@types/prettier": "^1.19.0",
        "execa": "^4.0.0",
        "fs-extra": "^8.1.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.7.12",
        "@typescript-eslint/parser": "^2.8.0",
        "@zeit/ncc": "^0.20.5",
        "eslint": "^5.16.0",
        "eslint-plugin-github": "^2.0.0",
        "eslint-plugin-jest": "^22.21.0",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "jest-circus": "^24.9.0",
        "js-yaml": "^3.13.1",
        "lint-staged": "^9.5.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.2.0",
        "typescript": "^3.6.4"
    }
}
